<UserControl x:Class="WpfPrism.Views.ToDoUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPrism.Views"
             mc:Ignorable="d" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">
    <md:DialogHost>
        <md:DrawerHost IsRightDrawerOpen="{Binding IsShowAddWait}">
            <md:DrawerHost.RightDrawerContent>
                <DockPanel Width="300" LastChildFill="False">
                    <TextBlock Text="添加待办" FontWeight="Bold" FontSize="20" Margin="20,20,20,10" DockPanel.Dock="Top"/>
                    <StackPanel Orientation="Horizontal" Margin="20" DockPanel.Dock="Top">
                        <TextBlock Text="状态" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox SelectedIndex="{Binding WaitInfoDTO.Status}">
                            <ComboBoxItem>待办</ComboBoxItem>
                            <ComboBoxItem>已完成</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <TextBox md:HintAssist.Hint="请输入待办标题" Margin="20,10" DockPanel.Dock="Top" Text="{Binding WaitInfoDTO.Title}"/>
                    <TextBox md:HintAssist.Hint="请输入待办内容" Margin="20,10" DockPanel.Dock="Top" MinHeight="100" Text="{Binding WaitInfoDTO.Contents}"/>

                    <Button Content="添加到待办" Margin=" 20,10" DockPanel.Dock="Top" Command="{Binding AddWaitInfoCommand}"></Button>
                </DockPanel>
            </md:DrawerHost.RightDrawerContent>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--#region 第一行 -->
                <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                    <TextBox Text="{Binding SearchTitle, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Width="200" md:HintAssist.Hint="查找待办事项..." md:TextFieldAssist.HasClearButton="True">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchWaitInfoListCommand}"></KeyBinding>
                        </TextBox.InputBindings>
                    </TextBox>
                    <TextBlock Text="筛选" Margin="10,0" VerticalAlignment="Center"/>
                    <ComboBox SelectedIndex="{Binding SearchIndex}">
                        <ComboBoxItem>待办</ComboBoxItem>
                        <ComboBoxItem>已完成</ComboBoxItem>
                        <ComboBoxItem>全部</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <Button Content="添加待办" HorizontalAlignment="Right" Margin="10,8" Command="{Binding ShowAddWaitCommand}"/>
                <!--#endregion-->

                <!-- 第二行 -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding NoListHidden}">
                    <Image Source="/Images/noList.png" Width="300" Height="300"/>
                    <TextBlock Margin="0,10" FontSize="18" HorizontalAlignment="Center" Text="没有待办事项，您可以添加一些待办事项。"/>
                </StackPanel>

                <StackPanel Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding ErrorHidden}">
                    <Image Source="/Images/error.png" Width="250" Height="270"/>
                    <TextBlock Margin="0,10" FontSize="18" HorizontalAlignment="Center" Text="抱歉，出错了！"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl Grid.Row="1" HorizontalAlignment="Left" ItemsSource="{Binding WaitInfoDTOList}" Margin="35,0,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel></WrapPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <md:TransitioningContent OpeningEffect="{md:TransitionEffect Kind=SlideInFromBottom}">
                                    <Border Background="{Binding BackColor}" CornerRadius="2" Margin="5">
                                        <Grid Width="220" MaxWidth="250" Height="180">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <md:PopupBox HorizontalAlignment="Right" Panel.ZIndex="1" Margin="0,5,0,0">
                                                <Button Content="删除" Height="30" VerticalContentAlignment="Center" Command="{Binding DataContext.DeleteWaitInfoCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ItemsControl}}" CommandParameter="{Binding}"/>
                                            </md:PopupBox>

                                            <TextBlock Text="{Binding Title}" Margin="10,5" FontWeight="Bold" FontSize="18"/>
                                            <TextBlock Text="{Binding Contents}" Grid.Row="1" Margin="10,5" FontSize="12"/>

                                            <Canvas ClipToBounds="True" Grid.RowSpan="2">
                                                <Border Canvas.Top="10" Canvas.Right="-50" Width="120" Height="120" Background="#ffffff" CornerRadius="100" Opacity="0.1"></Border>
                                                <Border Canvas.Top="80" Canvas.Right="-30" Width="120" Height="120" Background="#ffffff" CornerRadius="100" Opacity="0.1"></Border>
                                            </Canvas>

                                        </Grid>
                                    </Border>
                                </md:TransitioningContent>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!--显示错误提示-->
                <md:Snackbar x:Name="WaitUCBar" MessageQueue="{md:MessageQueue}" Grid.Row="1"></md:Snackbar>
            </Grid>
        </md:DrawerHost>
        
    </md:DialogHost>
    
</UserControl>

<UserControl x:Class="WpfPrism.Views.ToDoUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPrism.Views"
             mc:Ignorable="d" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">
    <md:DialogHost>
        <md:DrawerHost IsRightDrawerOpen="{Binding IsShowAddWait}">
            <md:DrawerHost.RightDrawerContent>
                <DockPanel Width="300" LastChildFill="False">
                    <TextBlock Text="添加待办" FontWeight="Bold" FontSize="20" Margin="20,20,20,10" DockPanel.Dock="Top" Foreground="DimGray"/>
                    <StackPanel Orientation="Horizontal" Margin="20" DockPanel.Dock="Top">
                        <TextBlock Text="状态" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="DimGray"/>
                        <ComboBox SelectedIndex="0" Foreground="DimGray">
                            <ComboBoxItem>待办</ComboBoxItem>
                            <ComboBoxItem>已完成</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <TextBox md:HintAssist.Hint="请输入待办标题" Margin="20,10" DockPanel.Dock="Top" Foreground="DimGray"/>
                    <TextBox md:HintAssist.Hint="请输入待办内容" Margin="20,10" DockPanel.Dock="Top" MinHeight="100" Foreground="DimGray"/>

                    <Button Content="添加到待办" Margin=" 20,10" DockPanel.Dock="Top"></Button>
                </DockPanel>
            </md:DrawerHost.RightDrawerContent>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--#region 第一行 -->
                <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                    <TextBox VerticalAlignment="Center" Width="200" md:HintAssist.Hint="查找待办事项..." md:TextFieldAssist.HasClearButton="True"></TextBox>
                    <TextBlock Text="筛选" Margin="10,0" VerticalAlignment="Center"/>
                    <ComboBox SelectedIndex="0">
                        <ComboBoxItem>全部</ComboBoxItem>
                        <ComboBoxItem>待办</ComboBoxItem>
                        <ComboBoxItem>已完成</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <Button Content="添加待办" HorizontalAlignment="Right" Margin="10,8" Command="{Binding ShowAddWaitCommand}"/>
                <!--#endregion-->

                <!-- 第二行 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl Grid.Row="1" HorizontalAlignment="Center" ItemsSource="{Binding WaitInfoDTOList}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel></WrapPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <md:TransitioningContent OpeningEffect="{md:TransitionEffect Kind=SlideInFromBottom}">
                                    <Border Background="ForestGreen" CornerRadius="2" Margin="5">
                                        <Grid Width="220" MaxWidth="250" Height="180">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <md:PopupBox HorizontalAlignment="Right" Panel.ZIndex="1" Margin="0,5,0,0">
                                                <Button Content="删除" Height="30" VerticalContentAlignment="Center"/>
                                            </md:PopupBox>

                                            <TextBlock Text="{Binding Title}" Margin="10,5" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Content}" Grid.Row="1" Margin="10,5"/>

                                            <Canvas ClipToBounds="True" Grid.RowSpan="2">
                                                <Border Canvas.Top="10" Canvas.Right="-50" Width="120" Height="120" Background="#ffffff" CornerRadius="100" Opacity="0.1"></Border>
                                                <Border Canvas.Top="80" Canvas.Right="-30" Width="120" Height="120" Background="#ffffff" CornerRadius="100" Opacity="0.1"></Border>
                                            </Canvas>

                                        </Grid>
                                    </Border>
                                </md:TransitioningContent>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </md:DrawerHost>
        
    </md:DialogHost>
    
</UserControl>
